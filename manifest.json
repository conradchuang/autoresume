{
	"manifest_version": 2,
	"name": "Auto Resume Downloads",
	"version": "1.0pre3",
	"description": "Automatically resume interrupted downloads.",
	"icons": {
		"48": "icons/autoresume-48.png"
	},
	"permissions": [
		"downloads",
		"alarms",
		"storage"
	],
	"optional_permissions": [
		"notifications"
	],
	"browser_action": {
		"default_icon": "icons/autoresume-32.png",
		"default_title": "Auto Resume Download",
		"default_popup": "popup/choose_downloads.html"
	},
	"options_ui": {
		"page": "options/options.html",
		"browser_style": true
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	}
}

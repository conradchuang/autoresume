{
	"manifest_version": 2,
	"name": "Auto Resume Download",
	"version": "1.0",
	"description": "Automatically retry a failed download",
	"icons": {
		"48": "icons/autoresume-48.png"
	},
	"permissions": [
		"downloads"
	],
	"browser_action": {
		"default_icon": "icons/autoresume-32.png",
		"default_title": "Auto Resume Download",
		"default_popup": "popup/choose_downloads.html"
	},
	"background": {
		"persistent": true,
		"scripts": ["background.js"]
	}
}
